.registration-wrapper
  .registration-main
    .registration-main__container
      .registration-main__container__left
        .registration-main__container__left__title
          ユーザー編集
        .registration-main__container__left__image
          .registration-main__container__left__image__first
            .registration-main__container__left__image__first__right
              = image_tag("registration-page1", width: "250px")
            .registration-main__container__left__image__first__left
              = image_tag("registration-page2", width: "250px")
          .registration-main__container__left__image__second
            = image_tag("sansyamendan_boy", width: "300px")

        .registration-main__container__left__back
          = link_to "戻る", :back

      .registration-main__container__right
        = form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :patch }) do |f|
          .registration-main__container__right__box
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :last_name
              .registration-main__container__right__box__form__input
                = f.text_field :last_name, placeholder: '例) 坂本', class: 'registration-input'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :first_name
              .registration-main__container__right__box__form__input
                = f.text_field :first_name, placeholder: '例) 龍馬', class: 'registration-input'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :メールアドレス
              .registration-main__container__right__box__form__input
                = f.email_field :email, class: 'registration-input'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :パスワード
                %i (英数字8文字以上)
              .registration-main__container__right__box__form__input
                = f.password_field :password, autocomplete: "off", class: 'registration-input'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :パスワード（確認）
              .registration-main__container__right__box__form__input
                = f.password_field :password_confirmation, autocomplete: "off", class: 'registration-input'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :"生徒　保護者　講師"
              .registration-main__container__right__box__form__input
                = f.collection_select :user_status_id, UserStatus.all , :id, :name, {prompt: '---'}, class: 'registration-select'
            .registration-main__container__right__box__form
              .registration-main__container__right__box__form__label
                = f.label :現在のパスワード
              .registration-main__container__right__box__form__input
                = f.password_field :current_password, autocomplete: "current-password", class: 'registration-input'
            .registration-main__container__right__box__btns
              .registration-main__container__right__box__btns__submit
                = f.submit "編集する", class: 'registration-btn'

        .registration-main__container__right__box__btns__delete
          .registration-main__container__right__box__btns__delete__link
            #{button_to "削除する", registration_path(resource_name), data: { confirm: "削除しますか？" }, method: :delete}






