.session-wrapper
  .session-container
    .session-container__title
      ログイン
    .session-container__main
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .session-container__main__form
          .session-container__main__form__email
            = f.label :email
            %br/
            = f.email_field :email, autofocus: true, autocomplete: "email"
          .session-container__main__form__password
            = f.label :password
            %br/
            = f.password_field :password, autocomplete: "current-password"
          .session-container__main__form__submit
            = f.submit "ログイン", class: 'session-btn'

      = render "devise/shared/links"


